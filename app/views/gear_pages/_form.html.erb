 <div class='container'>
     <div class='row'>
  <%= form_for @gear_page, :url => gear_pages_path, :html => { :multipart => true, :class => "form-horizontal" } do |f| %>
    <% if @gear_page.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@gear_page.errors.count, "error") %> prohibited this gear_page from being saved:</h2>

        <ul>
          <% @gear_page.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>




  <div class='col-md-9'>
  <div class='form-group'>
        <%= f.label :maincat, "Select the main category:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
        <%= select_tag(:maincat_id, options_for_select(@maincats), :prompt => "CATEGORY!") %>   
   </div>
  </div>

  <div class='form-group'>
    <%= f.label :parent_id, "add additional categories", class: "col-md-4 control-label"  %>
   <div class="col-md-8">
    <%= f.collection_select :parent_id, GearPage.order(:name), :id, :name, include_blank: true %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :name, class: "col-md-4 control-label" %>
   <div class="col-md-8">
      <%= f.text_field :name, placeholder: 'e.g. Fender Stratocaster' %>
    </div>
  </div>  

  <div class="form-group">
      <%= f.label :profile_image, class: "col-md-4 control-label" %>
  <div class="col-md-8">
      <%= f.file_field :profile_image %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :description, class: "col-md-4 control-label" %> 
  <div class="col-md-8">
      <%= f.text_area :description, placeholder: 'Gear origins, description, facts etc' %>
  </div>
  </div>

  <div class="form-group">
      <%= f.label :genre_id, "insert associated music genres:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :genre_id %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :artist_id, class: "col-md-4 control-label" %>
    <div class="col-md-8">
     <%= f.collection_select :artist_id, Artist.order(:name), :id, :name, include_blank: true %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :brand_id, "select Make or Brand", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.collection_select :brand_id, Brand.order(:name), :id, :name, include_blank: true %>
    </div>
  </div>

  <div class="form-group">
          <label class="col-sm-4 control-label">Where is it from?</label>
          <div class="col-sm-4">
              <select class="form-control"><option value="">Select a country</option>
